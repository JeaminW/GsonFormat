   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.gsonformat.plugin.contribution"
            objectClass="org.eclipse.jdt.core.IJavaElement">
         <action
               class="org.gsonformat.plugin.popup.actions.PopupAction"
               enablesFor="1"
               icon="icons/gsonicon.png"
               id="org.gsonformat.plugin.popupMenu"
               label="GsonFormat"
               menubarPath="additions">
         </action>
      </objectContribution>
      <viewerContribution
            id="org.gsonformat.plugin.viewerContribution"
            targetID="#CompilationUnitEditorContext">
         <action
               class="org.gsonformat.plugin.popup.actions.EditorAction"
               icon="icons/gsonicon.png"
               id="org.gsonformat.plugin.action.contextMenu"
               label="GsonFormat"
               menubarPath="group.copy">
         </action>
      </viewerContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.gsonformat.plugin.commands.gsonFromatCategory"
            name="GsonFormatCategory">
      </category>
      <command
            categoryId="org.gsonformat.plugin.commands.gsonFromatCategory"
            id="org.gsonformat.plugin.commands.GsonFormatCommand"
            name="GsonFormatCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.gsonformat.plugin.handlers.FormatHandler"
            commandId="org.gsonformat.plugin.commands.GsonFormatCommand">
         <activeWhen>
             <with variable="activeEditor">
                <instanceof 
                      value="org.eclipse.jdt.internal.ui.javaeditor.CompilationUnitEditor">
                </instanceof>
   			 </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.gsonformat.plugin.commands.GsonFormatCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ALT+S">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.gsonformat.plugin.toolbars.gsonFormatToolbar"
               label="toolbarjava">
            <command
                  commandId="org.gsonformat.plugin.commands.GsonFormatCommand"
                  icon="icons/gsonicon.png"
                  id="org.gsonformat.plugin.toolbar.gsonFormatCommand"
                  label="gsonformat"
                  tooltip="Json to java source">
            </command>
         </toolbar>
      </menuContribution>
   </extension>


</plugin>
